<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/content_delivery_file_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size_small_medium"
        android:textColor="@color/dark_content_text" />
    <TextView
        android:id="@+id/content_delivery_file_size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/content_delivery_file_name" />
    <ImageView
        android:id="@+id/content_delivery_favorite_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toLeftOf="@+id/content_delivery_download_percentage"
        android:layout_toStartOf="@id/content_delivery_download_percentage"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@id/content_delivery_download_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/content_delivery_file_download_image"
        android:layout_toStartOf="@id/content_delivery_file_download_image"
        android:layout_centerVertical="true"
        android:gravity="center"/>
    <ImageView
        android:id="@id/content_delivery_file_download_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#b12727"
        android:background="#b12727"
        android:id="@+id/toolbar_tinder"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="5">

        <com.tinderui.support.SquareImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageview_tinder"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/contentDescription_tinder"
            android:src="@drawable/main_screen_no_checkers"
            android:scaleType="centerInside"
            android:background="#c8000000" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/tomato_red">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/space_middle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/space_middle"
            android:layout_alignEnd="@id/space_middle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/no_button"
            android:id="@+id/button_no"
            android:textAllCaps="false"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textColor="@color/tomato_red" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@id/space_middle"
            android:layout_alignStart="@id/space_middle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/yes_button"
            android:id="@+id/button_yes"
            android:textAllCaps="false"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textColor="@color/tomato_red" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:id="@+id/swipe_item">
    <!--Bottom View-->
    <LinearLayout
        android:background="@color/main_red"
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:weightSum="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:id="@+id/delete_item"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/transparent"
            android:onClick="deleteItem"/>
    </LinearLayout>

    <!--Surface View-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/item_container">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hollow_circle"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delicious Food Name Here"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="@color/dark_red"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:singleLine="false"
                android:maxLines="1" />

            <TextView
                android:id="@+id/rname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name Here"
                android:textSize="15sp"
                android:typeface="sans"
                android:textColor="#944141"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:choiceMode="singleChoice"
                android:maxLines="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/list_food_picture"
            android:layout_alignTop="@+id/hollow_circle"
            android:layout_alignLeft="@+id/hollow_circle"
            android:layout_alignRight="@+id/hollow_circle"
            android:layout_alignBottom="@+id/hollow_circle"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/hollow_circle"
            android:rotation="0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hollow_circle"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <!--Top Checker Border-->
    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>
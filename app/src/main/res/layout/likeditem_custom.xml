<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:backgroundTint="#ffffff">
        <TextView
        android:id="@+id/fname"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="dfdbjsdcbsdkjvbdsjvbdskvbdsvjsdbvkdsbvjsdkvbdsjvbdsjkv fbdjsksbd"
        android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:textColor="#080101"
            android:paddingTop="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/rname"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:singleLine="false"
            android:layout_toRightOf="@+id/hollow_circle" />
    <TextView
        android:id="@+id/rname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant line 1"
        android:textSize="15dp"
        android:typeface="sans"
        android:textColor="#944141"
        android:layout_below="@+id/fname"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/hollow_circle"
        android:layout_marginBottom="10dp"
        android:choiceMode="singleChoice"/>

    <ImageView
        android:id="@+id/food_circle"
        android:rotation="180"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/drawn_circle"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />
    <ImageView
        android:id="@+id/hollow_circle"
        android:rotation="0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/hollow_circle"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp" />

    <!--Top Checker Border-->
</RelativeLayout>
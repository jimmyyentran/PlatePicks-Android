<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:id="@+id/item_container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hollow_circle"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delicious Food Name Here"
            android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="@color/dark_red"
                android:layout_alignParentTop="false"
                android:paddingLeft="5dp"
                android:layout_alignParentRight="false"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:singleLine="false"
                android:layout_toRightOf="@+id/hollow_circle"
                android:maxLines="1"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false" />

        <TextView
            android:id="@+id/rname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name Here"
            android:textSize="15dp"
            android:typeface="sans"
            android:textColor="#944141"
            android:paddingLeft="5dp"
            android:choiceMode="singleChoice"
            android:maxLines="1"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/fname" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_food_picture"
        android:layout_alignTop="@+id/hollow_circle"
        android:layout_alignLeft="@+id/hollow_circle"
        android:layout_alignRight="@+id/hollow_circle"
        android:layout_alignBottom="@+id/hollow_circle"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/hollow_circle"
        android:rotation="0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hollow_circle"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"

        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp" />

    <!--Top Checker Border-->
</RelativeLayout>
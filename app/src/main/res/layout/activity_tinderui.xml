<?xml version="1.0" encoding="utf-8"?>
<!--Container for whole layout-->

<!--Notice that some child containers have height=0dp. For LinearLayout, specifying a-->
<!--layout weight and setting height/width to 0dp sets height/width to a fraction of -->
<!--of the screen. Like setting weights for two containers, 5 and 5, would split     -->
<!--height or width in half.                                                         -->

<!--The proportion can be set however one wants (3 and 9, 2 & 8 & 14, etc.). However,-->
<!--objects that have a set height/width (eg. the toolbar) will still be its stated  -->
<!--height. So in this layout, FrameLayout and RelativeLayout are splitting the      -->
<!--remainder of the screen.                                                         -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Main UI-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Top Bar-->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/main_red"
            android:layout_gravity="top">

            <!--Drawer Icon-->
            <ImageButton
                android:id="@+id/droor_icon"
                android:contentDescription="@string/contentDescription_tinder"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/settings_icon"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:onClick="openDrawer"/>

            <!--Fancy Button-->
            <ImageButton
                android:id="@+id/fancy_button"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/fancy_button_2"
                android:background="@android:color/transparent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:nestedScrollingEnabled="false" />

            <!--List Button-->
            <FrameLayout
                android:id="@+id/list_button_frame"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">

                <ImageButton
                    android:id="@+id/list_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/list_icon_3"
                    android:background="@android:color/transparent"
                    android:onClick="gotoList" />
                <TextView
                    android:id="@+id/list_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/main_red"
                    android:typeface="sans"
                    android:layout_gravity="center" />

            </FrameLayout>
        </RelativeLayout>

        <!--Center Section-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#ffffff">

            <!--Top Checker Border-->
            <ImageView
                android:id="@+id/top_checkers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/checker_border_2"
                android:rotation="180"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:background="@color/main_red"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false" />

            <!--Faded Logo-->
            <ImageView
                android:id="@+id/faded_logo"
                android:src="@drawable/faded_logo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />


            <!--Container for Tinder Images-->
            <com.tinderui.support.CustomViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/viewPager_images"
                android:layout_below="@+id/top_checkers"
                android:layout_above="@+id/bot_checkers"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />


            <!--Bottom Checker Border-->
            <ImageView
                android:id="@+id/bot_checkers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/checker_border_2"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentBottom="true"
                android:background="@color/main_red" />
        </RelativeLayout>

        <!--Bottom Bar-->
        <RelativeLayout
            android:id="@+id/bot_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/main_red">

            <!--A "nothing" view. Useful for layout tricks-->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/space_middle"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false" />


            <!--No Button-->
            <Button
                android:background="@drawable/white_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/space_middle"
                android:layout_alignEnd="@id/space_middle"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="No"
                android:id="@+id/button_no"
                android:textAllCaps="false"
                android:textSize="58sp"
                android:textColor="@color/main_red"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp" />

            <!--Yes Button-->
            <Button
                android:background="@drawable/white_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@id/space_middle"
                android:layout_alignStart="@id/space_middle"
                android:text="@string/yes_button"
                android:id="@+id/button_yes"
                android:textAllCaps="false"
                android:textSize="58sp"
                android:textColor="@color/main_red"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />
        </RelativeLayout>
    </LinearLayout>

    <!--Drawer-->
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer1"
        android:visibility="gone">

        <!--Drawer Frame-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawer_frame">

            <!--Drawer Block-->
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:id="@+id/drawer_block"
                android:background="#ffffff"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">

                <!--Top Bar-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drawer_top_bar">

                    <!--Exit Button-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingRight="15dp"
                        android:id="@+id/exit_icon"
                        android:onClick="closeDrawer">

                        <!--Exit Icon's BG-->
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/exit_icon_bg"
                            android:background="@color/main_red"/>

                        <!--Exit Icon's Image-->
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/exit_icon_fg"
                            android:background="@drawable/exit_button_2"/>
                    </FrameLayout>

                    <!--Menu text-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Menu"
                        android:textColor="@color/main_red"
                        android:id="@+id/drawer_header_text"
                        android:textSize="27dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal" />
                </FrameLayout>

                <!--Grey Line between top bar and list-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/drawer_top_bar">
                </LinearLayout>

                <!--Drawer Content-->
                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/main_drawer"
                    android:scrollIndicators="none"
                    android:paddingTop="10dp"
                    android:layout_below="@+id/drawer_top_bar">
                </ListView>

            </RelativeLayout>

            <!--Space on block's right-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/drawer_right_space"
                android:layout_alignParentRight="false"
                android:layout_toRightOf="@+id/drawer_block"
                android:background="#000000"
                android:alpha="0.25">
            </FrameLayout>

        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>

    <!--Splash Screen-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_red"
        android:id="@+id/framelayout_splashScreen"
        android:layout_gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:src="@drawable/main_logo"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>

